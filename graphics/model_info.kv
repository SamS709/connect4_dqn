
#:import BoxLayoutWithActionBar graphics.box_layout_with_action_bar.BoxLayoutWithActionBar

<InfoLabel>:
    font_name : "graphics/fonts/pixel.TTF"
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: root.line_button_color
        Line:
            width : root.line_width
            rectangle : self.x+root.line_width, self.y+root.line_width, self.width-2*root.line_width, self.height-2*root.line_width

<ModelInfoWindow>:

<ModelInfoScreen>:
    BoxLayoutWithActionBar:
        ModelInfoWindow:
            id: model_info


